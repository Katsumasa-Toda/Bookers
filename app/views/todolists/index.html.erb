<h3>Books</h3>

<table>
    <thead>
        <tr>
            <th>title</th>
            <th>body</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.本のタイトル %></td>
            <td><%= book.感想 %></td>
            <td><%= link_to "show", book_path(book.id) %></td>
            <td><%= link_to "edit", edit_book_path(book.id) %></td>
            <td><%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<h3>New book</h3>
<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :本のタイトル %>

    <h4>Body</h4>
    <%= f.text_area :感想 %>

    <br><%= f.submit 'Create Book' %></br>

<% end %>